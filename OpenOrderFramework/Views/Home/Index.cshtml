@model OpenOrderFramework.Models.FoodCourt
@{
    ViewBag.Title = "Home Page";
}

 <meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="Fullscreen Background Image Slideshow with CSS3 - A Css-only fullscreen background image slideshow" />
<meta name="keywords" content="css3, css-only, fullscreen, background, slideshow, images, content" />
<meta name="author" content="Codrops" />
 <link href="~/Content/demo.css" rel="stylesheet" />
 <link href="~/Content/home.css" rel="stylesheet" />  


<!-- General demo styles & header -->
<link rel="stylesheet" type="text/css" href="~/Content/food.css" />


 <script type="text/javascript" src="~/Scripts/modernizr.custom.86080.js"></script>

<ul class="cb-slideshow">
    <li><span>Image 01</span><div><h3>South Indian</h3></div></li>
    <li><span>Image 02</span><div><h3>North Indian Thali</h3></div></li>
    <li><span>Image 03</span><div><h3>Morning Tea/Breakfast</h3></div></li>
    <li><span>Image 04</span><div><h3>Hyderabadi Biryani</h3></div></li>
    <li><span>Image 05</span><div><h3>Bhel</h3></div></li>
    <li><span>Image 06</span><div><h3>Veg Biryani</h3></div></li>
</ul>
<div class="container">
    
    <header>
        @*<h1>My Food Order</h1>*@      
        <div class="form-group">
            
            <div class="col-lg-6">
                <div class="container container-table">
                    <div class="row vertical-center-row">
                        <div class="text-center col-md-4 col-md-offset-4">
                            <h4 class="form-title">Select FC</h4>
                            <hr/>
                            <div class="dropdownlist">
                                @Html.DropDownList("FoodCourtId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                                <br />
                                <button type="button" class="btn btn-success btn-sm" onclick="location.href='@Url.Action("Index", "Items")'">Order Some Food &raquo;</button>
                            </div>
                        </div>
                    </div>
               </div>
           </div>
         
        </div>
       
        
    </header>
</div>



